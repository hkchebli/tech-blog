<!-- views/blog.handlebars -->
<div class="container">
    <h2>{{blog.title}}</h2>
    <p>{{blog.content}}</p>
    <p>Posted by {{blog.User.username}} on {{blog.createdAt}}</p>

    <h3>Comments</h3>
    {{#each blog.Comments as |comment|}}
        <div>
            <p>{{comment.content}}</p>
            <p>By {{comment.User.username}} on {{comment.createdAt}}</p>
        </div>
    {{/each}}

    {{#if loggedIn}}
        <form id="new-comment-form" data-blog-id="{{blog.id}}">
            <div class="form-group">
                <label for="comment-content-input">New Comment</label>
                <textarea id="comment-content-input" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>
    {{/if}}
</div>
